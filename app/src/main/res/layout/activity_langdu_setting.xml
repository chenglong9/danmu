<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_stting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beijing"
    android:fitsSystemWindows="true"
    tools:context="com.example.a45773.Main.SettingActivity">


    <ImageView
        android:id="@+id/fanhuild"
        android:layout_width="72dp"
        android:layout_height="27dp"
        android:background="@drawable/selector_bg3"
        android:layout_marginTop="10dp"
        android:onClick="fanhuild"
        />

    <RelativeLayout
        android:id="@+id/top1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#28000000"
        android:layout_marginTop="70dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="是否开启朗读"
            android:textSize="20dp"
            android:layout_marginTop="12.5dp"
            android:layout_marginLeft="10dp"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/tv_langdu"
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:text="已开启"
            android:textSize="20dp"
            android:layout_marginTop="12.5dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/selector_bg4"
            android:onClick="langdu1"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"

        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="朗读设置"
            android:textSize="20dp"

            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/top2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#28000000"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/top1"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="是否开启礼物弹幕"
            android:textSize="20dp"
            android:layout_marginTop="12.5dp"
            android:layout_marginLeft="10dp"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/gift_set"
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:text="已开启"
            android:textSize="20dp"
            android:layout_marginTop="12.5dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/selector_bg4"
            android:onClick="langdugift"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/ripple_bg3"
        android:layout_below="@+id/top2"
        android:layout_marginTop="20dp"
        android:id="@+id/top3"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="语音回复"
            android:textSize="20dp"
            android:layout_marginTop="12.5dp"
            android:layout_marginLeft="10dp"
            android:textColor="#FFFFFF"
            />
    </RelativeLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/list"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/top3"
        android:background="#28000000"
        android:visibility="gone"></ListView>
</RelativeLayout>
