<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_stting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beijing"
    android:fitsSystemWindows="true"
    tools:context="com.example.a45773.Main.SettingActivity">


    <ImageView
        android:id="@+id/fanhuist"
        android:layout_width="72dp"
        android:layout_height="27dp"
        android:background="@drawable/selector_bg3"
        android:layout_marginTop="10dp"
        android:onClick="fanhuist"
        />

    <RelativeLayout
        android:id="@+id/top1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#28000000"
        android:layout_marginTop="70dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="背景透明"
            android:textSize="20dp"
            android:layout_marginTop="12.5dp"
            android:layout_marginLeft="10dp"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/tv_touming"
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:text="已开启"
            android:textSize="20dp"
            android:layout_marginTop="12.5dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/selector_bg4"
            android:onClick="touming"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/top2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#28000000"
        android:layout_below="@+id/top1"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="通知栏停驻"
            android:textSize="20dp"
            android:layout_marginTop="12.5dp"
            android:layout_marginLeft="10dp"
            android:textColor="#FFFFFF"/>

        <TextView
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:text="已开启"
            android:textSize="20dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/selector_bg4"

            android:id="@+id/tongzhi"
            android:onClick="tongzhi"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/top22"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#28000000"
        android:layout_below="@+id/top2"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:id="@+id/s"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="弹幕设置"
            android:textSize="20dp"
            android:layout_marginTop="12.5dp"
            android:layout_marginLeft="10dp"
            android:textColor="#FFFFFF"/>
        <TextView
            android:id="@+id/s1"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="弹幕大小"
            android:textSize="20dp"
            android:layout_marginTop="12.5dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/s"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/s2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="这是一条弹幕"
            android:textSize="20dp"
            android:layout_marginTop="12.5dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/s1"
            android:layout_toRightOf="@+id/s3"
            android:textColor="#FFFFFF"/>
        <TextView
            android:id="@+id/s3"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="弹幕预览"
            android:textSize="20dp"
            android:layout_marginTop="12.5dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/s1"
            android:textColor="#FFFFFF"/>

        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/s1"
            android:layout_alignStart="@+id/s2"
            android:layout_marginStart="30dp"
            android:max="40"

            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/top3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/ripple_bg3"
        android:layout_below="@+id/top22"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="检查更新"
            android:textSize="20dp"
            android:layout_marginTop="12.5dp"
            android:layout_marginLeft="10dp"
            android:textColor="#FFFFFF"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/top4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/ripple_bg3"
        android:layout_below="@+id/top3"
        android:layout_marginTop="20dp"
        android:onClick="banben"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="版本信息"
            android:textSize="20dp"
            android:layout_marginTop="12.5dp"
            android:layout_marginLeft="10dp"
            android:textColor="#FFFFFF"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"

        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系统设置"
            android:textSize="20dp"

            android:textColor="#FFFFFF"/>
    </LinearLayout>

</RelativeLayout>
