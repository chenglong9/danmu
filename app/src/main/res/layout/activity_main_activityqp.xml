<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_activityqp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a45773.Mydanmu.MainActivityqp">

    <ImageView
        android:id="@+id/mybeijing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/beijing"
        />
    <ImageView
        android:id="@+id/beijinghei"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2d000000"
        android:scaleType="centerCrop" />
    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="+"
            android:onClick="add"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:textSize="40dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.89"
            android:gravity="center"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="点击输入房间号"
                android:textColor="#fac400"
                android:textSize="20dp"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/qp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:onClick="qp"
            android:background="@drawable/selector_bg1"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
    </FrameLayout>

</RelativeLayout>
